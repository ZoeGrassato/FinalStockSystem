<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinalSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow navbar-styling">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item nav-link-styling">
                                <a class="nav-link nav-item-styling" asp-area="" asp-controller="Home" asp-action="Index">Account</a>
                            </li>
                            <li class="nav-item nav-link-styling">
                                <a class="nav-link nav-item-styling" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
            @if (!User.Identity.IsAuthenticated)
            {
                <a class="nav-link nav-item-styling" asp-area="Identity" asp-page="/Account/Login">Login</a>
            }
            else
            {
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link nav-item-styling">Logout</button>
                </form>
            }
        </nav>
    </header>

    <div class="container-fluid" style="padding:0px !important">
        <main role="main" class="pb-3" style="height: 800px;">
            @RenderBody()
        </main>
    </div>

    <script>
        const url = window.location.href.split('/');
        const baseUrl = url[0] + '//' + url[2];
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/all.min.js" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
