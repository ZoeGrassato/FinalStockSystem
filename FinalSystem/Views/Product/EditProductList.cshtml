@model IEnumerable<ProductModel>


<div class="col-12">
    <div class="row">
        <div class="col-3">
            <form method="get" asp-action="ProductList">
                <div class="search-div">
                    <i class="fas fa-angle-left expand-icon-styling" onclick="SearchBarManager.toggleSearchBar()"></i>
                    <button class="submitBtn" onclick="HistoryManager.manage()" style="padding:0; border:none;" type="submit"><img src="~/images/mag-final2.png" class="search-icon" /></button>
                    <input type="search" value="@ViewData["GetDetails"]" name="ProductSearch" class="input-styling-search" />

                </div>
            </form>
        </div>
        <a class="image-list" asp-action="ProductList"><img src="~/images/list-search.png" /></a>
    </div>

    <div class="row">
        <div class="col-2 some-div">
            <ul id="myList">
            </ul>
        </div>
        <div class="col-10 styling-table">
            @if (Model.Count() > 0)
            {
                <ul class="list-group ul-styling-list">
                    <li class="list-group-item active item-product item-heading">Products</li>
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item item-product">
                            @item.Name   <a asp-action="EditProduct" asp-route-id="@item.Id"><img src="~/images/pencil.png" style="height: 38px;cursor:pointer" /></a>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>